<script>
  let intentos = 0;

  document
    .getElementById('validar')
    .addEventListener('click', function (evt) {
      const campo = document.getElementById('campo'),
        valido = document.getElementById('campoOK')


      if (intentos >= 2) {
        return;
      }

      if (/^\d+$/g.test(campo.value)) {
        valido.innerText = "válido";
        intentos = 0;

      } else {
        intentos++;
        valido.innerText = "intentos: " + intentos;

        if (intentos >= 2) {
          valido.innerText = "Este usuario ha sido deshabilitado por intentos fallidos de acceso";
        }
      }
    });
    
</script>
